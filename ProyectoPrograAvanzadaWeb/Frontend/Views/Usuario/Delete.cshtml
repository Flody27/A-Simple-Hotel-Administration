@model Frontend.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <div class="breadcrumb-text">
        <h2>Eliminar usuario</h2>
        <h4>Seguro en eliminar el siguiente usuario</h4>
    </div>
</div><br />

<dl class="col-lg-12">
    <div class="row">
        <div class="col-lg-6">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsrId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsrId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsrNombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsrNombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsrApellido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsrApellido)
            </dd>
        </div>
        <div class="col-lg-6">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsrEmail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsrEmail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsrPassword)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsrPassword)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsrRolId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsrRolId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsrMbrId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsrMbrId)
            </dd>
        </div>
    </div>

    <form asp-action="Delete" class="col-lg-12">
        @Html.HiddenFor(Model=>Model.UsrId)
        <div class="row">
            <div class="col-lg-6">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div class="col-lg-6">
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </form>

</dl>



