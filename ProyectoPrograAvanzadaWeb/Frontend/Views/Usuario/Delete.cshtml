@model Frontend.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <div class="breadcrumb-text">
        <h2>Eliminar usuario</h2>
        <h5>Seguro en borrar este usario</h5>
        <div class="bt-option">
            <a asp-action="Index">Inicio</a>
            <span>@ViewData["Title"]</span>
        </div>
    </div>
</div>

<div class="col-lg-12 mt-4 d-flex justify-content-center">
    <div class="row room-details-item ">
        <div class="col-lg-6 rd-text">
            <table>
                <tbody>
                    <tr>
                        <td class="r-o">@Html.DisplayNameFor(model => model.UsrId):</td>
                        <td>@Html.DisplayFor(model => model.UsrId)</td>
                    </tr>
                    <tr>
                        <td class="r-o">@Html.DisplayNameFor(model => model.UsrNombre):</td>
                        <td> @Html.DisplayFor(model => model.UsrNombre)</td>
                    </tr>
                    <tr>
                        <td class="r-o">@Html.DisplayNameFor(model => model.UsrApellido):</td>
                        <td>@Html.DisplayFor(model => model.UsrApellido)</td>
                    </tr>
                </tbody>
            </table>
        </div>


        <div class="col-lg-6 rd-text">
            <table>
                <tbody>
                    <tr>
                        <td class="r-o"> @Html.DisplayNameFor(model => model.UsrEmail):</td>
                        <td>@Html.DisplayFor(model => model.UsrEmail)</td>
                    </tr>
                    <tr>
                        <td class="r-o">@Html.DisplayNameFor(model => model.UsrPassword):</td>
                        <td> @Html.DisplayFor(model => model.UsrPassword)</td>
                    </tr>
                    <tr>
                        <td class="r-o">@Html.DisplayNameFor(model => model.UsrRolId):</td>
                        <td>@Html.DisplayFor(model => model.UsrRolId)</td>
                    </tr>
                    <tr>
                        <td class="r-o"> @Html.DisplayNameFor(model => model.UsrMbrId):</td>
                        <td>@Html.DisplayFor(model => model.UsrMbrId)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<form asp-action="Delete" class="col-lg-12  d-flex justify-content-center mb-4">
    @Html.HiddenFor(Model=>Model.UsrId)
    <input type="submit" value="Borrar usuario" class="btn btn-danger w-25" />
</form>


