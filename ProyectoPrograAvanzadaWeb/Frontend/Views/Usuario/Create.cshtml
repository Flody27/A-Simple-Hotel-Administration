@model Frontend.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <div class="breadcrumb-text">
        <h2>Agreagar usuario</h2>
    </div>
</div>

<div class="col-lg-12 review-add">
    <form asp-action="Create" class="row ra-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="UsrNombre" class="control-label"></label>
                <input asp-for="UsrNombre" class="form-control" />
                <span asp-validation-for="UsrNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsrApellido" class="control-label"></label>
                <input asp-for="UsrApellido" class="form-control" />
                <span asp-validation-for="UsrApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsrEmail" class="control-label"></label>
                <input asp-for="UsrEmail" class="form-control" />
                <span asp-validation-for="UsrEmail" class="text-danger"></span>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="UsrPassword" class="control-label"></label>
                <input asp-for="UsrPassword" class="form-control" />
                <span asp-validation-for="UsrPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsrRolId" class=""></label>
                @Html.DropDownListFor(model => model.UsrRolId, new SelectList(Model.Roles,"RolId","RolDescripcion"),"Seleccione el rol del usuario")
                <span asp-validation-for="UsrRolId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsrMbrId" class=""></label>
                @Html.DropDownListFor(model => model.UsrMbrId, new SelectList(Model.Membresias,"MbrId","MbrNombre"),"Seleccione una membresia")
                <span asp-validation-for="UsrMbrId" class="text-danger"></span>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
     
    </form>
</div>

<div class="col-lg-12">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
