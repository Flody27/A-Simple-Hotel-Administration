@model IEnumerable<Frontend.Models.UsuarioViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-lg-12">
    <div class="breadcrumb-text">
        <h2>Usuarios</h2>
    </div>
</div>

<div class="col-lg-12">

    <div class="my-2">
        <a class="btn btn-success" asp-action="Create">Create New</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UsrId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsrNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsrApellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsrEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsrRolId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsrMbrId)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsrId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsrNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsrApellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsrEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsrRolId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsrMbrId)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {  id=item.UsrId }, new{@class="btn btn-success"}) 
                        @Html.ActionLink("Details", "Details", new {  id=item.UsrId }, new{@class="btn btn-info"}) 
                        @Html.ActionLink("Delete", "Delete", new {  id=item.UsrId }, new{@class="btn btn-danger"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section script{
    <script>
        $(document).ready(function () {
            $("#table_id").DataTable();
        })
    </script>
}

