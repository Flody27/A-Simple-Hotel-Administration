@model IEnumerable<Frontend.Models.ReservacionViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-lg-12">
    <div class="breadcrumb-text">
        <h2>Reservaciones</h2>
    </div>
</div>
<p>
    <a class="btn btn-success" asp-action="Create">Agregar una nueva reservación</a>
</p>
<div class="col-lg-12">
    <table class="table table-striped" id="dataTables">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RsvId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RsvUsrId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RsvHabId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RsvFechaEntrada)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RsvFechaSalida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RsvPrecioFinal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RsvId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RsvUsrId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RsvHabId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RsvFechaEntrada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RsvFechaSalida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RsvPrecioFinal)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new {  id=item.RsvId  }, new{@class="btn btn-success"})
                        @Html.ActionLink("Detalles", "Details", new { id=item.RsvId }, new{@class="btn btn-info"})
                        @Html.ActionLink("Borrar", "Delete", new { id=item.RsvId }, new{@class="btn btn-danger"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
