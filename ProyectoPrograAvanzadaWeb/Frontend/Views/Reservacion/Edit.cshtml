@model Frontend.Models.ReservacionViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="col-lg-12">
    <div class="breadcrumb-text">
        <h2>Editar Reservación</h2>
        <div class="bt-option">
            <a asp-action="Index">Inicio</a>
            <span>@ViewData["Title"]</span>
        </div>
    </div>
</div>
    <div class="col-lg-12 review-add mt-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(Model=>Model.RsvId)
            </div>
            <div class="form-group">
                <label asp-for="RsvUsrId" class="control-label"></label>
                @Html.DropDownListFor(model => model.RsvUsrId, new SelectList(Model.Usuarios,"UsrId","UsrNombre"),"escoga el usuario",Model.RsvId)
                <span asp-validation-for="RsvUsrId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RsvHabId" class="control-label"></label>
                @Html.DropDownListFor(model => model.RsvHabId, new SelectList(Model.Habitaciones,"HabId","HabNumPuerta"),"Seleccione una habitacion",Model.RsvHabId)
                <span asp-validation-for="RsvHabId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RsvFechaEntrada" class="control-label"></label>
                <input asp-for="RsvFechaEntrada" class="form-control" />
                <span asp-validation-for="RsvFechaEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RsvFechaSalida" class="control-label"></label>
                <input asp-for="RsvFechaSalida" class="form-control" />
                <span asp-validation-for="RsvFechaSalida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RsvPrecioFinal" class="control-label"></label>
                <input asp-for="RsvPrecioFinal" class="form-control" />
                <span asp-validation-for="RsvPrecioFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
