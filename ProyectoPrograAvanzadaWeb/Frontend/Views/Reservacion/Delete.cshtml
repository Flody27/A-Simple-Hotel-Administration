@model Frontend.Models.ReservacionViewModel

@{
    ViewData["Title"] = "Delete";
}
<div class="col-lg-12">
    <div class="breadcrumb-text">
        <h2>Eliminar Reservación</h2>
        <h5>¿Seguro que quiere borrar esta reservación?</h5>
        <div class="bt-option">
            <a asp-action="Index">Inicio</a>
            <span>@ViewData["Title"]</span>
        </div>
    </div>
</div>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RsvId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RsvId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RsvUsrId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RsvUsrId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RsvHabId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RsvHabId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RsvFechaEntrada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RsvFechaEntrada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RsvFechaSalida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RsvFechaSalida)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RsvPrecioFinal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RsvPrecioFinal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @Html.HiddenFor(Model=>Model.RsvId)
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
